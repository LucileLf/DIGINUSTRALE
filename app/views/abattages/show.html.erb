<div class="container">
  <h1>Show Abattage</h1>
<h1> Information sur le lot :</h1>
</div>


<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Envoyer en production
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: "/coppas/create", method: :post do |form| %>
          <div class="form-group">
            <%= form.label :q_coppa, "Quantité de coppa: ", style: "color: black" %>
            <%= form.number_field :q_coppa, in: 1..10%>
            <%= form.submit "OK"%>
          </div>
        <% end %>

        <%= form_with url: "/prisuttus/create", method: :post do |form| %>
        <div class="form-group">
          <%= form.label :q_prisuttu, "Quantité de prisuttu: ", style: "color: black" %>
          <%= form.number_field :q_prisuttu, in: 1..10%>
          <%= form.submit "OK"%>
        </div>
        <% end %>

        <%= form_with url: "/lonzus/create", method: :post do |form| %>
        <div class="form-group">
          <%= form.label :q_lonzu, "Quantité de lonzu: ", style: "color: black" %>
          <%= form.number_field :q_lonzu, in: 1..10%>
          <%= form.submit "OK"%>
        </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>
<%= link_to "Exit", "/abattages", class: "btn btn-primary" %>