<html>
  <head>
    <meta charset="UTF-8">
    <title>PDF Document</title>
    <link rel="stylesheet" href="download.scss">
    <!-- Add any CSS stylesheets or additional meta tags here -->
    <style>
      /* Add custom CSS styles for the PDF */
      body {
        font-family: Arial, sans-serif;
        font-size: 16px;
      }
      head-info{
        font-size: 14px;
      }
      table {
        border-collapse: collapse;
        width: 100%;
      }
      /* Additional styling for specific elements */
      h1 {
        color: #333;
        font-size: 18px;
      }
      table  {
        border: 1px solid black;
      }
      tr, td {
        border: 1px solid black;
      }
      /* ... */
    </style>
  </head>

  <body>

    <div class="container-global">
      <div class="head-info">
          <h1 class="active">Information sur le lot <%= @abattage.numéro_lot %></h1>
            <p>Date et lieu d'abattage</p>
            <p><%= @abattage.date.strftime("%d/%m/%Y") %>, <%= @abattage.lieu %></p>
      </div>
      <div class="tableau">
        <h1>Infos des porcs</h1>

        <table style="border: 1px solid black">
          <thead>
            <tr>
              <td>IPG du porc</td>
              <td>Poids carcasse(kg)</td>
              <td>Epaisseur du lard (cm)</td>
              <td>pH</td>
              <td>Quantité coppa</td>
              <td>Quantité lonzu</td>
              <td>Quantité prisuttu</td>
            </tr>
          </thead>
          <tbody>
            <% @abattage.porcs.each do |porc|%>
              <tr>
                <td>
                  <%= link_to porc_path(porc) do %>
                    <%= porc.user.EDE %><%= porc.boucle %>
                  <% end %>
                </td>
                <td>
                <%= porc.poids_carcasse%>
                </td>
                <td>
                  <%= porc.epaisseur_lard%>
                </td>
                <td>
                  <%= porc.ph%>
                </td>
                <td>
                  <%= porc.coppa.quantité%>
                </td>
                <td>
                  <%= porc.lonzu.quantité%>
                </td>
                <td>
                  <%= porc.prisuttu.quantité%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

          <h1>Infos des produits</h1>
        <table style="border: 1px solid black">
          <thead>
            <tr>
              <td>Produit</td>
              <td>Poids (kg)</td>
              <td>Epaisseur du lard (cm)</td>
              <td>pH</td>
              <td>Date mise au sel</td>
              <td>Date sortie de sel</td>
              <td>Durée de fumage (jours)</td>
              <td>Poids sortie de sèche (kg)</td>
              <td>Date entrée affinage</td>
              <td>Date sortie affinage vente</td>
            </tr>
          </thead>
          <tbody>
            <tr>
                <td>Coppa</td>
              <td><%= @coppa_temoin.poids %></td>
                <td>N\A</td>
                <td>N\A</td>
                <td><%= @coppa_temoin.date_mise_au_sel.strftime("%d/%m/%Y") %></td>
                <td><%= @coppa_temoin.date_sortie_de_sel.strftime("%d/%m/%Y") %></td>
                <td><%= @coppa_temoin.durée_fumage %></td>
                <td><%= @coppa_temoin.poids_sortie_sèche %></td>
                <td><%= @coppa_temoin.date_entrée_affinage.strftime("%d/%m/%Y") %></td>
                <td><%= @coppa_temoin.date_sortie_affinage_vente.strftime("%d/%m/%Y") %></td>
            </tr>

            <tr>
                <td>Lonzu</td>
                <td><%= @lonzu_temoin.poids %></td>
                <td>N\A</td>
                <td>N\A</td>
                <td><%= @lonzu_temoin.date_mise_au_sel.strftime("%d/%m/%Y") %></td>
                <td><%= @lonzu_temoin.date_sortie_de_sel.strftime("%d/%m/%Y") %></td>
                <td><%= @lonzu_temoin.durée_fumage %></td>
                <td><%= @lonzu_temoin.poids_sortie_sèche %></td>
                <td><%= @lonzu_temoin.date_entrée_affinage.strftime("%d/%m/%Y") %></td>
                <td><%= @lonzu_temoin.date_sortie_affinage_vente.strftime("%d/%m/%Y") %></td>
            </tr>

            <tr>
                <td>Prisuttu</td>
                <td><%= @prisuttu_temoin.poids %></td>
                <td><%= @prisuttu_temoin.epaisseur_lard %></td>
                <td><%= @prisuttu_temoin.ph %></td>
                <td><%= @prisuttu_temoin.date_mise_au_sel.strftime("%d/%m/%Y") %></td>
                <td><%= @prisuttu_temoin.date_sortie_de_sel.strftime("%d/%m/%Y") %></td>
                <td><%= @prisuttu_temoin.durée_fumage %></td>
                <td><%= @prisuttu_temoin.poids_sortie_sèche %></td>
                <td><%= @prisuttu_temoin.date_entrée_affinage.strftime("%d/%m/%Y") %></td>
                <td><%= @prisuttu_temoin.date_sortie_affinage_vente.strftime("%d/%m/%Y") %></td>
            </tr>
          </tbody>
        </table>


      </div>

    </div>

  </body>
</html>
