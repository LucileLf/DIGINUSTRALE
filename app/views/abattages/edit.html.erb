

<div class="container-global">
  <%= render "shared/head_bar" %>

<%# NAVBAR %>
  <div class="nav-container">
    <div class="head-info">
      <div>
        <h2 class="active">Lot d'abattage <%= @abattage.numéro_lot %></h2>
      </div>

      <div class="elevage">
          <p>Date et lieu d'abattage</p>
          <p><%= @abattage.date.strftime("%d/%m/%Y") %>, <%= @abattage.lieu %></p>
      </div>
    </div>
  </div>



  <div class="form-container">

    <div class="form-headers row">
      <div class="header col-1">IPG</div>
      <div class="header col-3">Poids carcasse (kg)</div>
      <div class="header col-3">Epaisseur lard (cm)</div>
      <div class="header col-2">pH</div>
      <div class="header col-1"></div>
    </div>


    <%= simple_form_for @abattage, data: { controller: 'aop' } do |fp| %>
      <% @porcs.each_with_index do |porc, index| %>
          <%= simple_fields_for porc do |p| %>

            <div class="form-row row bg-green" data-aop-target="row">
              <div class="boucle-porc col-1">
                <%=current_user.EDE%><%=porc.boucle%>
              </div>
              <div class="form-input col-3">
                <input type="number" step="0.01" name="<%= index %>[poids_carcasse]" id="poids-carcasse" value="" data-aop-target="poids">
              </div>
              <div class="form-input col-3">
                <input type="number" step="0.01" name="<%= index %>[epaisseur_lard]" id="epaisseur-lard" value="" data-aop-target="lard">
              </div>
              <div class="form-input col-2">
                <input type="number" step="0.01" name="<%= index %>[ph]" id="ph" value="" data-aop-target="ph">
              </div>
              <div class="aop form-input col-1 text-end" data-aop-target="output" >
                <input type="hidden" name="<%= index %>[id]" id="id" value="<%= porc.id %>">
                <%= image_tag("aop.png", class: "d-none") %>
              </div>

            </div>

          <% end %>
      <% end %>
      <div class="submit-btn">
        <%= fp.button :submit, 'Mettre à jour', input_html: { class: 'form-control' }, data: {
            insert_in_list_target: "btn-update",
            action: 'aop#clickUpdatePorcs',
          } %>
      </div>
    <% end %>

  </div>


<div class="buttons">

  <%= link_to "Exit", "/porcs", class: "btn btn-primary"%>


      <div class="btn-decoupe" data-aop-target="decoupe">
        <%= link_to new_abattage_path, class: "btn btn-primary d-none" do %>
            Découpe
        <% end %>
      </div>

</div>
