<div class="container-global">
  <%= render "shared/head_bar" %>
  <div class="form-create-container mt-3">
    <h2>MODIFICATION DU PORC <%=@porc.user.EDE%><%=@porc.boucle%></h2>
    <div style="width: 100px; height: 3px; background-color: gray; margin-bottom: 50px;"></div>
      <%= simple_form_for @porc do |f| %>
        <div class="formBloc">
          <div class="formGroupe">
            <%= f.input :boucle %>
          </div>
          <div class="formGroupe">
            <%= f.input :date_de_naissance, as: :date %>
          </div>
          <div class="formGroupe">
            <%= f.input :boucle_mère, collection: Porc.where(sexe: "femelle").pluck(:boucle), selected: @selected_value_mere %>
          </div>
          <div class="formGroupe">
            <%= f.input :boucle_père, collection: Porc.where(sexe: "mâle").pluck(:boucle), selected: @selected_value_pere %>
          </div>
          <div>
            <span style="color: black; font-weight: bold; font-size: 20px; transition: 0.4s ease-out">Sexe</span>
            <%= f.input :sexe,
                              as: :radio_buttons,
                              input_html: { class: "tag-selector" },
                              item_wrapper_class: 'tag-item',
                              collection: [['mâle', 'mâle'], ['femelle', 'femelle']] %>
          </div>
          <div class="d-flex justify-content-between form-actions">
            <%= link_to "Annuler", porc_path(@porc), class: "annuler-button" %>
            <%= f.button :submit, "Valider", class: "submit-button" %>
          </div>
        </div>
      <% end %>
  </div>
</div>
